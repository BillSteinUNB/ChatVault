{
  "manifest_version": 3,
  "name": "ChatVault",
  "version": "1.0.0",
  "description": "Organize and manage your AI chat conversations across platforms",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "ChatVault"
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  }
}
